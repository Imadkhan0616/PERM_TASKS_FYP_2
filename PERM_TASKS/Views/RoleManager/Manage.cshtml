@using PERM_TASKS.Models.RolesPermission
@model List<RolesPermissionViewModel>

@{
    ViewData["Title"] = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage Roles Permissions</h2>
            Add/Remove Permissions for Roles / @ViewBag.RoleName
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    @*<input type="hidden" asp-for="@Model[i].RoleId" />*@
                    <input type="hidden" asp-for="@Model[i].MenuName" />
                    <input asp-for="@Model[i].Selected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].Selected">
                        @Model[i].MenuName
                    </label>
                </div>
            }
            @*<div asp-validation-summary="All" class="text-danger"></div>*@
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary"
                   style="width:auto" />

            <a asp-action="Index" asp-controller="RoleManager"
               class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>